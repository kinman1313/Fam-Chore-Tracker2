<%- include('../layouts/base', { title: 'Register' }) %>

<div class="auth-container">
    <div class="auth-header">
        <img src="/img/logo.svg" alt="FamChore Logo" class="auth-logo">
        <h1>Create Account</h1>
        <p class="text-muted">Join your family's chore management</p>
    </div>

    <form id="registerForm" class="animate-in">
        <div class="form-group">
            <label class="form-label" for="username">Username</label>
            <input type="text" id="username" name="username" class="form-input" required>
        </div>

        <div class="form-group">
            <label class="form-label" for="email">Email</label>
            <input type="email" id="email" name="email" class="form-input" required>
        </div>

        <div class="form-group">
            <label class="form-label" for="password">Password</label>
            <div class="password-input-group">
                <input type="password" id="password" name="password" class="form-input" required 
                       pattern="^(?=.*[A-Za-z])(?=.*\d)[A-Za-z\d]{8,}$" 
                       title="Minimum 8 characters, at least one letter and one number">
                <button type="button" class="password-toggle" aria-label="Toggle password visibility">
                    <i class="far fa-eye"></i>
                </button>
            </div>
            <small class="form-text text-muted">Minimum 8 characters, at least one letter and one number</small>
        </div>

        <div class="form-group">
            <label class="form-label" for="role">Role</label>
            <select id="role" name="role" class="form-input" required>
                <option value="parent">Parent</option>
                <option value="child">Child</option>
            </select>
        </div>

        <button type="submit" class="btn btn-primary btn-block">
            <i class="fas fa-user-plus mr-2"></i> Create Account
        </button>

        <p class="text-center mt-4">
            Already have an account? <a href="/auth/login" class="text-primary">Sign In</a>
        </p>
    </form>
</div>

<script src="/js/register.js"></script>
