<%- include('../layouts/base', { title: 'Reset Password' }) %>

<div class="auth-container">
    <div class="auth-header">
        <img src="/img/logo.svg" alt="FamChore Logo" class="auth-logo">
        <h1>Reset Password</h1>
        <p class="text-muted">Enter your email to reset your password</p>
    </div>

    <form id="resetPasswordForm" class="animate-in">
        <div class="form-group">
            <label class="form-label" for="email">Email</label>
            <input type="email" id="email" name="email" class="form-input" required>
        </div>

        <button type="submit" class="btn btn-primary btn-block">
            <i class="fas fa-key mr-2"></i> Reset Password
        </button>

        <p class="text-center mt-4">
            Remember your password? <a href="/auth/login" class="text-primary">Sign In</a>
        </p>
    </form>
</div>

<script src="/js/reset-password.js"></script>
