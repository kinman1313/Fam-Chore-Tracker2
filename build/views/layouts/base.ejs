<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="<%= locals.metaDescription || 'Tech Platform' %>">
    
    <title><%= locals.title ? `${title} | Tech Platform` : 'Tech Platform' %></title>
    
    <!-- Stylesheets -->
    <link rel="stylesheet" href="/css/style.css">
    
    <!-- Favicon -->
    <link rel="icon" type="image/x-icon" href="/favicon.ico">
    
    <!-- Additional head content -->
    <%- locals.head ? head : '' %>
</head>
<body class="dark-mode">
    <!-- Navigation -->
    <%- include('../partials/header') %>

    <!-- Main Content -->
    <main class="main-content">
        <%- body %>
    </main>

    <!-- Footer -->
    <%- include('../partials/footer') %>

    <!-- Scripts -->
    <script src="/js/app.js"></script>
    <script src="/js/main.js"></script>
    
    <!-- Additional scripts -->
    <%- locals.scripts ? scripts : '' %>

    <!-- Page-specific scripts -->
    <% if (locals.pageScript) { %>
        <script src="/js/pages/<%= pageScript %>.js"></script>
    <% } %>
</body>
</html>
