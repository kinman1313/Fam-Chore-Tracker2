{
  "name": "famchore",
  "version": "1.0.0",
  "engines": {
    "node": ">=18.0.0"
  },
  "main": "index.js",
  "type": "module",
  "scripts": {
    "start": "node src/index.js",
    "dev": "nodemon src/index.js",
    "migrate": "node src/database/migrations/index.js",
    "migrate:down": "node src/database/migrations/index.js down",
    "seed": "node src/database/seeds/index.js",
    "setup:db": "npm run migrate && npm run seed",
    "setup:prod": "NODE_ENV=production npm run migrate",
    "dev:server": "nodemon server/dist/index.js",
    "build:server": "tsc -p server/tsconfig.json",
    "watch:server": "tsc -w -p server/tsconfig.json",
    "client": "set PORT=3007 && react-scripts start",
    "dev:client": "concurrently \"npm run dev:server\" \"npm run client\"",
    "build": "npm run build:client && npm run build:server",
    "build:client": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "lint": "eslint .",
    "format": "prettier --write .",
    "validate": "npm run lint && npm run test",
    "prepare": "husky install"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "connect-mongo": "^5.1.0",
    "connect-sqlite3": "^0.9.13",
    "dotenv": "^16.4.7",
    "ejs": "^3.1.9",
    "express": "^4.21.1",
    "express-session": "^1.18.1",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.8.3",
    "sqlite3": "^5.1.7",
    "@heroicons/react": "^2.1.1",
    "axios": "^1.6.7",
    "bcrypt": "5.1.1",
    "classnames": "^2.5.1",
    "connect-flash": "^0.1.1",
    "cors": "^2.8.5",
    "framer-motion": "11.13.5",
    "helmet": "8.0.0",
    "joi": "^17.13.3",
    "moment": "^2.30.1",
    "mongodb": "^6.11.0",
    "nodemailer": "^6.9.16",
    "passport": "^0.7.0",
    "passport-local": "^1.0.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.22.3",
    "react-scripts": "^5.0.1"
  },
  "devDependencies": {
    "nodemon": "^3.1.7",
    "@babel/plugin-proposal-private-property-in-object": "7.21.11",
    "@eslint/js": "9.16.0",
    "@tailwindcss/forms": "0.5.9",
    "@testing-library/jest-dom": "^6.4.2",
    "@testing-library/react": "^14.2.1",
    "@testing-library/user-event": "^14.5.2",
    "@types/bcrypt": "5.0.2",
    "@types/bcryptjs": "2.4.6",
    "@types/jsonwebtoken": "9.0.7",
    "@types/mongoose": "5.11.96",
    "@types/node": "22.10.2",
    "@types/nodemailer": "6.4.17",
    "@types/react": "^18.2.64",
    "@types/react-dom": "^18.2.21",
    "autoprefixer": "10.4.20",
    "concurrently": "^8.2.2",
    "eslint": "8.57.1",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-react": "7.37.2",
    "globals": "15.13.0",
    "husky": "^8.0.0",
    "jest": "^29.0.0",
    "lint-staged": "^15.0.0",
    "postcss": "8.4.49",
    "prettier": "^3.2.5",
    "supertest": "^6.0.0",
    "tailwindcss": "3.4.16",
    "ts-node": "10.9.2",
    "typescript": "4.9.5",
    "typescript-eslint": "8.18.0"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "lint-staged": {
    "*.{js,jsx}": [
      "eslint --fix",
      "prettier --write"
    ]
  }
}
