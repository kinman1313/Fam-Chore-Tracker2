<!DOCTYPE html>
<html>
<head>
    <title>Admin Dashboard</title>
    <link rel="stylesheet" href="/styles.css">
</head>
<body>
    <h1>Admin Dashboard</h1>
    
    <!-- Add Chore Form -->
    <div class="add-chore-form">
        <h2>Add New Chore</h2>
        <form action="/add-chore" method="POST">
            <input type="text" name="choreName" placeholder="Chore Name" required>
            <input type="text" name="assignedTo" placeholder="Assign To" required>
            <button type="submit">Add Chore</button>
        </form>
    </div>

    <!-- Chores List -->
    <div class="chores-list">
        <h2>Current Chores</h2>
        <% chores.forEach(function(chore) { %>
            <div class="chore-item" data-id="<%= chore.id %>">
                <span class="chore-name"><%= chore.name %></span>
                <span class="assigned-to">Assigned to: <%= chore.assignedTo %></span>
                <span class="completion-status <%= chore.completed ? 'completed' : '' %>">
                    Status: <%= chore.completed ? 'Completed' : 'Pending' %>
                </span>
                <button class="delete-chore" onclick="deleteChore(<%= chore.id %>)">Delete</button>
            </div>
        <% }); %>
    </div>

    <a href="/logout" class="logout-btn">Logout</a>

    <script>
    function deleteChore(choreId) {
        if (confirm('Are you sure you want to delete this chore?')) {
            fetch(`/delete-chore/${choreId}`, {
                method: 'DELETE',
                headers: {
                    'Content-Type': 'application/json'
                }
            })
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    document.querySelector(`[data-id="${choreId}"]`).remove();
                } else {
                    alert('Error deleting chore');
                }
            })
            .catch(error => {
                console.error('Error:', error);
                alert('Error deleting chore');
            });
        }
    }
    </script>
</body>
</html>